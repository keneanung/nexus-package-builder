{
  "name": "nexus-package-builder",
  "version": "0.0.0",
  "description": "Tool to create an Iron Realms Nexus native package from individual files",
  "author": "keneanung <keneanung@gmail.com>",
  "license": "MIT",
  "repository": "git://github.com/keneanung/nexus-package-builder.git",
  "main": "lib/index.js",
  "devDependencies": {
    "@keneanung/iron-realms-nexus-typings": "^0.1.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "acorn": "^8.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsdoc": "^37.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.3",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "write-pkg": "^5.0.0"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest --collect-coverage --config jestconfig.json",
    "watchTest": "jest --collect-coverage --config jestconfig.json --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "setup": "node ./setup.mjs"
  },
  "files": [
    "lib/**/*",
    "!lib/**/__tests__/*",
    "!lib/webpack/**/*"
  ],
  "dependencies": {
    "@types/js-yaml": "^4.0.5",
    "commander": "^8.3.0",
    "js-yaml": "^4.1.0"
  },
  "bin": "lib/index.js"
}
